<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7" crossorigin="anonymous">
    <link rel="stylesheet" href="/Content/css/styles.css">
    @if(Model["currentUser"].GetDisplayPreference() == 1)
    {
      <link rel="stylesheet" href="/Content/css/styles1.css">
    }
    else if (Model["currentUser"].GetDisplayPreference() == 2)
    {
      <link rel="stylesheet" href="/Content/css/styles2.css">
    }
    else
    {
      <link rel="stylesheet" href="/Content/css/styles3.css">
    }
    <title>Add a New Restaurant</title>
  </head>
  <body>
    <div class="container centered-container">
      @if(@Model["allCuisines"].Count==0)
      {
        <p>
          You must add at least one type of cuisine before you may add a restaurant. Click <a href="/cuisine/new">here</a> to do so.
        </p>
      }
      else
      {
        <form class="form-group" action="/restaurant/success" method="post">
          <label for="restaurant-name">Enter Restaurant Name:</label>
          <input type="text" name="restaurant-name" required>
          <select name="cuisine-id">
            @foreach (var cuisine in Model["allCuisines"])
            {
              <option value="@cuisine.GetId()">@cuisine.GetName()</option>
            }
          </select>
          <button class="btn btn-success" type="submit" name="button">Submit</button>
        </form>
      }
    </div>
  </body>
</html>
