<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Cuisines</title>
  </head>
  <body>
    @if(@Model.Count==0)
    {
      <p>
        No cuisines have been added yet.
      </p>
    }
    else
    {
      <ul>
      @foreach(var cuisine in Model)
      {
        <li><a href="/cuisines/@cuisine.GetId()">@cuisine.GetName()</a></li>
      }
      </ul>
    }
    <a href="/cuisine/new">Add a new cuisine</a>
    <a href="/">Return Home</a>
  </body>
</html>
